{
  "permissions": {
    "deny": [
      "Read(.env*)",
      "Read(.env)",
      "Read(.env.local)",
      "Edit(.env*)",
      "Edit(.env)",
      "Edit(.env.local)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path // empty' | xargs -I {} pnpm exec prettier --write {} 2>/dev/null || true"
          }
        ]
      }
    ]
  }
}
